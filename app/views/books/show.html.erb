<main>
<% if flash[:notice] %>
<div class="success">
  <p id="notice">
    <%= flash[:notice] %>
  </p>
</div>
<% end %>


<div class="show">
<p>
  <strong>Title: </strong>
  <%= @book.title %>
</p>

<p>
  <strong>Body: </strong>
  <%= @book.body %>
</p>
</div>

<p>
  <%= link_to "Edit", edit_book_path(@book.id) %> | <%= link_to "Back", books_path %>
</p>
</main>