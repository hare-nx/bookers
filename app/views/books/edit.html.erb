<main>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error">
  <span><%= @book.errors.count %> errors prohibited this book from begin saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </span>
</div>
<% end %>

<div class="edit-box">
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h5>Title</h5>
  <div class="box"><%= f.text_field :title %></div>

  <h5>Body</h5>
  <div class="box"><%= f.text_area :body %></div>

  <p><%= f.submit 'Update Book' %></P>
<% end %>


<p class="command"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
</main>